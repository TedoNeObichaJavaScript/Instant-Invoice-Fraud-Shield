# Environment Configuration Template
# Copy this file to .env and update with your secure values
# NEVER commit .env to Git - it contains sensitive information

# Database Configuration
POSTGRES_DB=microservices_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=SecurePassword123!

# JWT Configuration
# Note: JWT secret should be at least 256 bits (32 characters) for security
# The API Gateway supports both base64-encoded and plain text secrets
JWT_SECRET=my-super-secret-jwt-key-that-is-at-least-256-bits-long-for-security-purposes

# API Key for internal microservice communication
API_KEY=internal-api-key-12345-secure

# SSL Certificate Paths (for production)
SSL_CERT_PATH=/etc/nginx/ssl/server.crt
SSL_KEY_PATH=/etc/nginx/ssl/server.key

# Development vs Production
NODE_ENV=development
